<nav class="code-example-tabs">
  {{#if hbs}}
    <div class="code-example-tab {{if (eq activeTab "hbs") 'active'}}" onclick={{action (mut activeTab) "hbs"}}>Template</div>
  {{/if}}
  {{#if js}}
    <div class="code-example-tab {{if (eq activeTab "js") 'active'}}" onclick={{action (mut activeTab) "js"}}>Javascript</div>
  {{/if}}
  {{#if css}}
    <div class="code-example-tab {{if (eq activeTab "css") 'active'}}" onclick={{action (mut activeTab) "css"}}>CSS</div>
  {{/if}}
  {{#if showResult}}
    <div class="code-example-tab {{if (eq activeTab "result") 'active'}}" onclick={{action (mut activeTab) "result"}}>Result</div>
  {{/if}}
</nav>
{{#if (and hbs (eq activeTab 'hbs'))}}
  {{code-snippet  name=hbs classNames="code-example-snippet" class="active"}}
{{/if}}
{{#if (and js (eq activeTab 'js'))}}
  {{code-snippet  name=js classNames="code-example-snippet" class="active"}}
{{/if}}
{{#if (and css (eq activeTab 'css'))}}
  {{code-snippet  name=css classNames="code-example-snippet" class="active"}}
{{/if}}
{{#if (and showResult hasBlock)}}
  <div class="code-example-snippet result {{if (eq activeTab 'result') 'active'}}">
    {{yield partialName}}
  </div>
{{/if}}